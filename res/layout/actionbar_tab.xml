<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/actionbar_tab"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="@dimen/actionbar_tab_height">

    <LinearLayout
        android:id="@+id/playlist_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_weight="1"
              android:layout_gravity="center"
              android:gravity="center"

              android:drawableLeft="@drawable/tab_playlist_ic"
              android:text="@string/actionbar_tab_playlist"
              />
        <View
                android:id="@+id/indicator_playlist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_tab_indicator_height"
                android:background="@color/holo_red_light"
                />
    </LinearLayout>

    <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/actionbar_tab_divider_margin"
            android:layout_marginBottom="@dimen/actionbar_tab_divider_margin"
            android:background="@color/gray"
          />
    <LinearLayout
            android:id="@+id/artist_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:drawableLeft="@drawable/tab_artist_ic"
                android:text="@string/actionbar_tab_artist"
                />
        <View
                android:id="@+id/indicator_artist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_tab_indicator_height"
                android:background="@color/holo_red_light"
                android:visibility="invisible"
                />
    </LinearLayout>

    <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/actionbar_tab_divider_margin"
            android:layout_marginBottom="@dimen/actionbar_tab_divider_margin"
            android:background="@color/gray"
            />

    <LinearLayout
            android:id="@+id/album_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:drawableLeft="@drawable/tab_album_ic"
                android:text="@string/actionbar_tab_album"
                />

        <View
                android:id="@+id/indicator_album"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_tab_indicator_height"
                android:background="@color/holo_red_light"
                android:visibility="invisible"
                />
    </LinearLayout>

    <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/actionbar_tab_divider_margin"
            android:layout_marginBottom="@dimen/actionbar_tab_divider_margin"
            android:background="@color/gray"
            />

    <LinearLayout
            android:id="@+id/rank_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:drawableLeft="@drawable/tab_order_ic"
                android:text="@string/actionbar_tab_order"
                />
        <View
                android:id="@+id/indicator_rank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_tab_indicator_height"
                android:background="@color/holo_red_light"
                android:visibility="invisible"
                />
    </LinearLayout>

</LinearLayout>