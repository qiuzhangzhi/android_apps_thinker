<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

        >

    <ListView
            android:id="@+id/artist_song_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_marginBottom="@dimen/actionbar_bottom_height"
            >
    </ListView>

    <include
            android:id="@+id/actionbar_bottom"
            layout="@layout/actionbar_bottom"
            />

    <include
            android:id="@+id/colorstrip"
            layout="@layout/colorstrip"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_above="@id/actionbar_bottom"
            />
</RelativeLayout>