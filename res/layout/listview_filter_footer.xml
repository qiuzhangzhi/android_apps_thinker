<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="@dimen/item_padding_large"
              android:paddingTop="@dimen/item_padding_large"
              android:paddingBottom="@dimen/item_padding_large"

        >
     <EditText
        android:id="@+id/filer_editer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:textSize="@dimen/text_size_nomal"
        />

     <ImageView
            android:id="@+id/filter_editer_add"
            android:layout_width="@dimen/ico_size_nomal"
            android:layout_height="@dimen/ico_size_nomal"

            android:layout_gravity="center_vertical"
            android:src="@drawable/dialog_filter_add_ic"
            />
</LinearLayout>