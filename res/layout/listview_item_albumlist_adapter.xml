<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/item_padding_nomal"
                android:paddingRight="@dimen/item_padding_nomal"
                android:paddingTop="@dimen/item_padding_large"

        >


    <ImageView
            android:id="@+id/album_ico"
            android:layout_width="@dimen/ico_size_normal"
            android:layout_height="@dimen/ico_size_normal"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"

            android:layout_toRightOf="@id/album_ico"
            android:layout_marginLeft="@dimen/item_padding_large"
            >

        <TextView
                android:id="@+id/album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/text_size_nomal"
                android:textColor="@color/black"
                />

        <TextView
                android:id="@+id/album_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_padding_small"

                android:textSize="@dimen/text_size_small"
                android:textColor="@color/darker_gray"
                />


    </LinearLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"

            android:layout_below="@id/album_ico"
            android:layout_marginTop="@dimen/item_padding_large"

            android:background="@color/gray"
            />
</RelativeLayout>